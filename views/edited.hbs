<form method="post" action="/donewithediting/{{s.id}}" >
    <!-- Text input-->
    <div class="form-group">
        <label class="col-md-4 control-label" for="action_id">Title</label>
        <div class="col-md-5">
            <input id="action_id" name="action_id" type="text" name="title" value ="{{s.title}}" class="form-control input-md">

        </div>

        <label for="exampleFormControlTextarea1">Description</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" name="description" value ="{{s.description}}" rows="3"></textarea>

    </div>

    <button type="submit" class="btn btn-primary">Done with Editing</button>
</form>